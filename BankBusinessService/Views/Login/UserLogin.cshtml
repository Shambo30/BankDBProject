@{
    ViewData["Title"] = "User Login Page";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <div class="text-center">
        <h1 class="display-4">Welcome to User Dashboard</h1>
        <p>Please log in to access your account.</p>

        <form method="post" asp-controller="Login" asp-action="UserAuth" class="form-signin">
            <div class="form-group">
                <label for="username">Username/Email</label>
                <input type="text" class="form-control" id="username" name="username" required />
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password" required />
            </div>
            <button type="submit" class="btn btn-primary">Log In</button>
            @* Error Handling Code - if username/password is invalid *@
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="text-danger">
                    @* For loop to prevent null values from being referenced *@
                    @foreach (var entry in ViewData.ModelState)
                    {
                        foreach (var error in entry.Value.Errors)
                        {
                            <div>@error.ErrorMessage</div>
                        }
                    }
                </div>
            }
        </form>
    </div>
</body>
